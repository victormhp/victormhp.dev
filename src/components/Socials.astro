---
import Icon from "./Icon.astro";
import { socialsArray } from "../config.ts";
---

<div class="fixed right-auto bottom-0 left-10 z-10 hidden w-10 md:block">
  <div class="relative flex flex-col items-center justify-center">
    <ul class="flex flex-col gap-6 text-2xl">
      {
        socialsArray.map(({ href, icon, label }) => (
          <li>
            <a
              class="hover:text-dark focus-visible:text-dark flex p-0.5 text-gray-800 transition-all hover:-translate-y-1 focus-visible:translate-y-1"
              href={href}
              target="_blank"
              rel="noopener noreferrer"
            >
              <span class="sr-only">{label}</span>
              <Icon icon={icon} size="1.25em" />
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</div>

<style>
  ul:after {
    content: "";
    display: block;
    width: 2px;
    height: 90px;
    margin: 0 auto;
    background-color: var(--color-gray-800);
  }
</style>
