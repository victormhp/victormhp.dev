---
const email = "victoralbertomhp@gmail.com";
---

<div class="side">
  <div class="link">
    <a href=`mailto:${email}`>{email}</a>
  </div>
</div>

<style>
  .side {
    position: fixed;
    bottom: 0;
    right: 40px;
  }

  .link {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
  }

  .link:after {
    content: "";
    display: block;
    width: 1px;
    height: 90px;
    margin: 0 auto;
    background-color: var(--gray-800);
  }

  a {
    font-family: var(--font-brand);
    writing-mode: vertical-rl;
    color: var(--gray-800);
    margin: 20px auto;
    padding: 10px;
    transition: all var(--theme-transition);
  }

  a:is(:hover, :focus) {
    color: var(--accent-dark);
    transform: translateY(-3px);
  }

  @media (max-width: 50em) {
    .side {
      display: none;
    }
  }
</style>
