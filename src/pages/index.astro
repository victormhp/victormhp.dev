---
import BaseLayout from "../layouts/BaseLayout.astro";
import Button from "../components/Button.astro";
import Hero from "../components/Hero.astro";
---

<BaseLayout>
  <main class="wrapper flex flex-col-reverse justify-center gap-2 md:px-8" transition:animate="slide">
    <Hero>
      <div class="flex flex-col justify-start gap-8 sm:flex-row">
        <Button href="/about" color="bg-btn-green">About me</Button>
        <Button href="/work" color="bg-btn-blue">Check out my work!</Button>
      </div>
    </Hero>
  </main>
</BaseLayout>

<style>
  .hero-img img {
    aspect-ratio: 5/4;
    object-fit: cover;
    object-position: center;
    border-radius: 1rem;
  }

  @media (min-width: 64em) {
    .hero-img {
      width: 100%;
      position: relative;
      display: block;
      border-radius: 0.5rem;

      & img {
        aspect-ratio: 3/4;
        border-radius: 0.5rem;
      }

      &::before,
      &::after {
        content: "";
        display: block;
        position: absolute;
        width: 100%;
        height: 100%;
        border-radius: 0.5rem;
      }

      &::after {
        border: 2px solid var(--accent-dark);
        top: 15px;
        left: 20px;
        z-index: -1;
      }
    }
  }
</style>
